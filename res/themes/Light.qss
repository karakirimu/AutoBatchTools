/* ===== QMainWindow ===== */

QMainWindow {
    background: #f5f5f5;
}

QMainWindow::separator {
    background: #c2c2c2;
    width: 1px; /* vertical */
    height: 1px; /* horizontal */
}

/* ===== QFrame ===== */

QFrame {
    border: none;
    background-color: transparent;
    color: #393939;
}

/*
QFrame#ScopeFrame,
QFrame#AboutPEFrame
{
    border: none;
    background-color: #f5f5f5;
}
*/

/* ===== QMenuBar ===== */

QMenuBar {
    background-color : #f5f5f5;
    border-bottom-color: #f5f5f5;
    color: #393939;
}

QMenuBar::item {
    background-color: #f5f5f5;
    color: #111111;
}

QMenuBar::item:hover {
    background-color: #c2c2c2;
    color: black;
}

QMenuBar::item:selected {
    background-color: #e0e0e0;
}

/* ===== QMenu ===== */

QMenu {
    background-color: #c2c2c2;
    margin: 2px; /* some spacing around the menu */
    color: #111111;
}

QMenu::item {
    padding: 2px 25px 2px 20px;
    border: 1px solid transparent; /* reserve space for selection border */
}

QMenu::item:disabled {
    color: #f5f5f5;
    border: none;
}

QMenu::item:selected {
    background-color: #e0e0e0;
    border: none;
}

/* ===== QToolBar ===== */

QToolBar {
    background-color: #f5f5f5;
    spacing: 4px;
    padding: 6px;
    border: none;
}

/* ===== QToolButton ===== */

QToolButton {
    background-color: #f5f5f5;
    color: #111111;
    border: none;
}

QToolButton:checked {
    background-color: #aeaeae;
    color: #111111;
    border: none;
}

QToolButton#runToolButton
, QToolButton#stopToolButton
, QToolButton#pauseToolButton
, QToolButton#testSettingToolButton
, QToolButton#addInputToolButton
, QToolButton#removeInputToolButton
, QToolButton#editInputToolButton
, QToolButton#searchAddButton
, QToolButton#searchDeleteButton
, QToolButton#searchEditButton
, QToolButton#openToolButton
, QToolButton#pluginAddToolButton
, QToolButton#pluginDeleteToolButton
, QToolButton#pluginSettingToolButton
, QToolButton#profileAddToolButton
, QToolButton#profileDeleteToolButton
, QToolButton#profileEditToolButton
{
    background-color: #d2d2d2;
    border: none;
}

QToolButton:hover
, QToolButton#runToolButton:hover
, QToolButton#stopToolButton:hover
, QToolButton#pauseToolButton:hover
, QToolButton#testSettingToolButton:hover
, QToolButton#addInputToolButton:hover
, QToolButton#removeInputToolButton:hover
, QToolButton#editInputToolButton:hover
, QToolButton#searchAddButton:hover
, QToolButton#searchDeleteButton:hover
, QToolButton#searchEditButton:hover
, QToolButton#openToolButton:hover
, QToolButton#pluginAddToolButton:hover
, QToolButton#pluginDeleteToolButton:hover
, QToolButton#pluginSettingToolButton:hover
, QToolButton#profileAddToolButton:hover
, QToolButton#profileDeleteToolButton:hover
, QToolButton#profileEditToolButton:hover
{
    background-color: #e0e0e0;
    border: none;
}

QToolButton[popupMode="1"] { /* only for MenuButtonPopup */
    padding-right: 20px; /* make way for the popup button */
    background-color: #c2c2c2;
    padding: 2px;
    color: #393939;
}

QToolButton:pressed
, QToolButton#runToolButton:pressed
, QToolButton#stopToolButton:pressed
, QToolButton#pauseToolButton:pressed
, QToolButton#testSettingToolButton:pressed
, QToolButton#addInputToolButton:pressed
, QToolButton#removeInputToolButton:pressed
, QToolButton#editInputToolButton:pressed
, QToolButton#searchAddButton:pressed
, QToolButton#searchDeleteButton:pressed
, QToolButton#searchEditButton:pressed
, QToolButton#openToolButton:pressed
, QToolButton#pluginAddToolButton:pressed
, QToolButton#pluginDeleteToolButton:pressed
, QToolButton#pluginSettingToolButton:pressed
, QToolButton#profileAddToolButton:pressed
, QToolButton#profileDeleteToolButton:pressed
, QToolButton#profileEditToolButton:pressed
{
    background-color: #aeaeae;
    border: none;
}

QToolButton#qt_calendar_prevmonth {
    icon-size:16px 16px;
    border:0px;
    qproperty-icon: url(:/default_icons/undo.png);
}

QToolButton#qt_calendar_nextmonth {
    icon-size:16px 16px;
    border:0px;
    qproperty-icon: url(:/default_icons/redo.png);
}

/* ===== QheaderView ===== */

/*QHeaderView::section {
    background-color: #c2c2c2;
    border: none;
    padding-top: 4px;
    padding-bottom: 4px;
    padding-left: 8px;
    color: #393939;
}*/

QHeaderView::section {
    background-color: #f5f5f5;
    border-top: 1px solid #c6c6c6;
    padding-top: 3px;
    border-bottom: 1px solid #c6c6c6;
    padding-bottom: 3px;
    padding-left: 8px;
    color: #393939;
}

QHeaderView[VerticalHeaderStyle="1"]::section
{
    background-color: #f5f5f5;
    border-top: 0px;
    border-bottom: 1px solid #c2c2c2;
    color: #393939;
}

QHeaderView[VerticalHeaderStyle="1"]::section:checked
{
    border-left: 3px solid #1ab185;
    padding-left: 5px;
    background-color: #f5f5f5;
    color: #393939;
}

/* ===== QTableWidget ===== */

/*
QTableCornerButton::section {
    background-color: #c2c2c2;
    color: #393939;
}*/

QTableCornerButton::section {
    background-color: #f5f5f5;
    color: #393939;
    border-top: 1px solid #c6c6c6;
    padding-top: 3px;
    border-bottom: 1px solid #c6c6c6;
    padding-bottom: 3px;
}

QTableWidget {
    background-color: #f5f5f5;
    selection-background-color: #e0e0e0;
    color: #393939;
}

CommandTable {
    background-color: #f5f5f5;
}

